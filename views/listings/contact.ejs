<% layout("/layouts/boilerplate.ejs")%>

<body onclick="toggleSidebarOnBody(event)" class="bg-black">
  <section class="relative -mx-5 text-gray-400 bg-gray-900 body-font">
    <%- include("../includes/sidebar.ejs") %>
    <div class="absolute inset-0 bg-gray-900">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3825.574776291502!2d80.49661620943284!3d16.49705538418045!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3a35f27d40f21c55%3A0x1490eacd54859850!2sVIT-AP%20University!5e0!3m2!1sen!2sin!4v1726995935347!5m2!1sen!2sin"
        width="100%"
        height="100%"
        title="map"
        class="absolute inset-0"
        frameborder="0"
        marginheight="0"
        marginwidth="0"
        scrolling="no"
        style="filter: grayscale(0) contrast(1.2) opacity(0.6)"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      ></iframe>
    </div>
    <div class="container flex px-5 py-24 mx-auto">
      <div
        class="relative z-10 flex flex-col w-full p-8 mt-10 bg-black rounded-lg shadow-md lg:w-1/3 md:w-1/2 md:ml-auto md:mt-0"
      >
        <h2 class="mb-1 text-lg font-medium text-white title-font">Feedback</h2>
        <p class="mb-2 leading-relaxed">Feel free to contact us</p>
        <div class="relative mb-4">
        <form method="post" ,action="/sendFeedback">
            <label for="email" class="text-sm leading-7 text-gray-400"
              >Email</label
            >
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-3 py-1 text-base leading-8 text-gray-100 transition-colors duration-200 ease-in-out bg-gray-800 border border-gray-700 rounded outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-900"
            />
          <div class="relative mb-4">
            <label for="message" class="text-sm leading-7 text-gray-400"
              >Message</label
            >
            <textarea
              id="message"
              name="message"
              class="w-full h-32 px-3 py-1 text-base leading-6 text-gray-100 transition-colors duration-200 ease-in-out bg-gray-800 border border-gray-700 rounded outline-none resize-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-900"
            ></textarea>
          </div>
          <input type="submit" value="Send "
            class="px-6 py-2 text-lg text-white bg-red-500 border-0 rounded focus:outline-none hover:bg-red-600"/
          ></form>
      </div>
    </div>
  </section>
</body>
