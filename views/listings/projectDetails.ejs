<% layout("/layouts/boilerplate.ejs")%>
<body class="flex flex-col min-h-screen bg-black font-poppins">
    <main class="relative flex-grow min-h-screen">
        <!-- sidebar starts here -->
        <%- include("../includes/sidebar.ejs")%>
        <!-- sidebar ends here -->
         <section class="mt-44">
            <div class="flex justify-around mt-10">
                <div class="text-white text-3xl font-semibold h-auto w-auto  p-16 bg-zinc-900 rounded-2xl flex flex-col">
                    <% if(project.requiredSkills.length>0){%>
                        <h1 class="text-center text-yellow-400 mb-10">Skills Requirements</h1>
                    <ul class="skills text-2xl mt-6 text-center flex flex-col gap-6">
                        <% for(let i=0 ;i<project.requiredSkills.length ;i++){%>
                                <li class="flex  items-center gap-4">
                                    <img src="/images/check.png" class="h-8 justify-start" alt="">
                                    <span class="justify-end"><%=project.requiredSkills[i]%></span>
                                </li>
                            <%}%>
                        </ul>
                    <%}else{%>
                        <h1 class="text-center text-yellow-400 mb-10">No Specific Skills Required</h1>
                    <%}%>
                    
                </div>
                <div class="text-white text-3xl font-semibold h-auto w-auto  p-16 bg-zinc-900 rounded-2xl flex flex-col">
                    <% if(project.requiredSkills.length>0){%>
                        <h1 class="text-center text-yellow-400 mb-10">Team Members</h1>
                    <ul class="skills text-2xl mt-6 text-center flex flex-col gap-6">
                        <% for(let i=0 ;i<project.members.length ;i++){%>
                                <li class="flex  items-center gap-4">
                                    <img src="/images/user.png" class="h-8 justify-start" alt="">
                                    <span class="justify-end"><%=project.members[i]%></span>
                                </li>
                            <%}%>
                        </ul>
                    <%}else{%>
                        <h1 class="text-center text-yellow-400 mb-10">Be the first one to join</h1>
                    <%}%>
                    
                </div>
            </div>
            <div class="w-full flex justify-center mt-16">
                <div class="flex flex-col gap-4 justify-center items-center">
                    <%if(project.requiredSkills.length>0){%>
                        <div class="flex items-start text-xl">
                            <div class="flex items-center h-5 mt-1 mr-2">
                              <input id="terms" aria-describedby="terms" type="checkbox" class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300 dark:bg-gray-700 text-xl dark:border-gray-600 dark:focus:ring-primary-600 dark:ring-offset-gray-800" required="">
                            </div>
                            <div class="ml-3 text-sm">
                              <label for="terms" class="font-light text-gray-500 dark:text-gray-300 text-xl">I am agree with <span class="font-medium text-primary-600  dark:text-primary-500">skills Requirement</span></label>
                            </div>
                        </div>
                    <%}%>
                    
                    <div>
                        <form action="/request/<%=project.userId%>/<%=project.projectName%>" method="post">
                            <button class="btn btn-warning w-64 text-xl hover:scale-105 ease-in-out duration-300">Join Team</button>
                        </form>
                    </div>
                </div>
                
            </div>
            
            
         </section>
    </main>
</body>
