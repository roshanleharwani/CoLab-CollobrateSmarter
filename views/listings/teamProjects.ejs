<% layout("/layouts/boilerplate.ejs")%>

    <body class="flex flex-col min-h-screen bg-black font-poppins">
        <!-- Header -->

        <main class="relative flex-grow">
            <!-- sidebar starts here -->
            <%- include("../includes/sidebar.ejs")%>
                <!-- sidebar ends here -->


                <section id="Hackathon" class="w-full mx-auto mt-16 text-gray-600 body-font min-h-48 md:w-11/12">
                    <div class="container flex flex-col items-center justify-center py-24">
                        <div
                            class="px-4 py-3 my-4 text-3xl font-bold text-center text-white border-b-4 border-white h-1/4 md:text-center md:ml-4">
                            Explore Teams
                        </div>
                        <% if(allTeamProjects.length>0){%>
                            <div class="grid grid-cols-1 gap-8 mt-5 w-full sm:grid-cols-2 lg:grid-cols-3">
                                <% for(let i=0; i < allTeamProjects.length; i++){ %>
                                    <a href="/teamProjects/<%= allTeamProjects[i]._id %>"
                                        class="block hover:scale-105 transition duration-300 ease-in-out">
                                        <div class="p-4 md:w-full">
                                            <div
                                                class="h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden">
                                                <img class="lg:h-48 md:h-36 w-full object-cover object-center"
                                                src="/images/<%= allTeamProjects[i].imageIndex %>.jpg" alt="blog">
                                                <div class="p-6">
                                                    <h2
                                                        class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1">
                                                        TEAM PROJECT</h2>
                                                    <h1 class="title-font text-lg font-medium text-white mb-3">
                                                        <%=allTeamProjects[i].projectName%>
                                                    </h1>
                                                    <div class="min-h-12 max-h-16 w-full line-clamp-2">
                                                        <%=allTeamProjects[i].description%>
                                                    </div>
                                                    <div class="flex items-center flex-wrap mt-4 ">
                                                        <span
                                                            class="text-indigo-500 inline-flex items-center md:mb-2 lg:mb-0">Learn
                                                            More
                                                            <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24"
                                                                stroke="currentColor" stroke-width="2" fill="none"
                                                                stroke-linecap="round" stroke-linejoin="round">
                                                                <path d="M5 12h14"></path>
                                                                <path d="M12 5l7 7-7 7"></path>
                                                            </svg>
                                                        </span>
                                                        <span
                                                            class="text-gray-400 mr-3 inline-flex items-center lg:ml-auto md:ml-0 ml-auto leading-none text-sm pr-3 py-1">
                                                            <svg class="w-4 h-4 mr-1" stroke="currentColor" stroke-width="2"
                                                                fill="none" stroke-linecap="round" stroke-linejoin="round"
                                                                viewBox="0 0 24 24">
                                                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z">
                                                                </path>
                                                                <circle cx="12" cy="12" r="3"></circle>
                                                            </svg>
                                                            1.2K
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                    <% } %>
                            </div>
                        <%}else{%>
                            <div class="flex  justify-center w-full  p-28">
                                <h1 class="p-2  font-sans text-6xl font-bold text-center text-transparent bg-gradient-to-r from-blue-500 via-green-500 to-purple-500 bg-clip-text">
                                    Currently No Projects
                                </h1>
                            </div>
                        <%}%>
                    </div>
                </section>

                <div class="w-[88vw] min-h-14 mx-auto flex justify-end">
                    <div class="duration-300 plus-icon w-14 h-14 md:hover:scale-110 mb-2">
                        <a href="/teamRegistration"><img src="/images/plus (1).png" alt=""
                                class="rounded-full hover:border-2 hover:border-white cursor-pointer"></a>
                    </div>
                </div>
        </main>


    </body>